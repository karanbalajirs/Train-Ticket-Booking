          <% travel.forEach((value) => { %>
            <form method="post" action="/coach/<%=value.travelId%>"> 
            <div class="card text-center mt-4 mx-md-4 " >
              <div class="card-body  d-flex justify-content-between mx-md-4 align-items-center ">
                <div><h5 class="card-text  top-20 start-0"><%= value.trainVal.trainstart %></h5></div>
