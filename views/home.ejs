                <div><h5 class="card-text"><%= value.trainVal.traindest %></h5></div>
              </div>
              <div class="card-footer d-flex justify-content-between ">
                <div class="d-flex justify-content-around align-self-center card-text">
                  <p style="color:blue;" class="ps">VIA:</p>
                  <p class="ps"><%= value.trainVal.trainroute[0]%></p>
                  <p class="ps"><%= value.trainVal.trainroute[1] %></p>
                  <p class="ps"><%= value.trainVal.trainroute[2] %></p>
                </div>
                  <button type="submit" class="align-self-center position-absolute af card-text btn btn-outline-primary btn-sm" name="<%- value %>" >Book Now</button>
                <div class="d-flex align-self-center card-text ">
                  <% var r = String(value.travelDate);
                  d = r.substring(3,15);
                  t = r.substring(16,21);
                  %>
                  <p style="color: blueviolet; " class="ps">Date:</p>
                  <p class="text-muted ps"><%= d %></p>
                  <p style="color: blueviolet; " class="ps">Time:</p>
                  <p class="text-muted ps"><%= t %> (IST)</p>
                </div>
              </div>
            </div>
         
